<configs>

    <append xpath="/gameevents">

        <action_sequence name="action_decay_item">

            <property name="action_type" value="Game" />
            <property name="target_type" value="Entity" />

            <action class="AddItemDurability">
                <property name="phase" value="1" />
                <property name="items_location" value="Held" />
                <property name="amount" value="0.1" />
                <property name="is_negative" value="true" />
                <property name="is_percent" value="true" />
            </action>

        </action_sequence>

        <action_sequence name="action_deactivate_held_item">

            <property name="action_type" value="Game" />
            <action class="ActionDeactivateHeldItem, ProceduralCaves" />

        </action_sequence>

    </append>


</configs>
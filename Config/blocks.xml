<configs>
    <append xpath="/blocks">

        <block name="caveAir">
            <property name="Tags" value="air" />
            <property name="CreativeMode" value="None" />
            <property name="Extends" value="air" />
            <property name="StabilityFull" value="true" />
            <property name="Shape" value="Invisible" />
            <property name="StabilitySupport" value="true" />
            <property name="stability_glue" value="10000" />
            <property name="MaxDamage" value="50000" />
            <property name="Collide" value="false" />
            <property name="CanDestroy" value="false" />
            <property name="Material" value="McaveAir" />
            <drop event="Destroy" count="0" />
        </block>

        <!-- decoration -->
        <block name="cntCaveFloor">
            <property name="Extends" value="cntWastelandRandomLootHelper" />
            <property name="CreativeMode" value="Dev" />
        </block>

        <block name="cntCaveFloorFlat">
            <property name="Extends" value="cntWastelandRandomLootHelper" />
            <property name="CreativeMode" value="Dev" />
        </block>

        <block name="cntCaveCeiling">
            <property name="Extends" value="cntWastelandRandomLootHelper" />
            <property name="CreativeMode" value="Dev" />
        </block>

        <!-- terrain loot -->
        <block name="terrStoneCave">
            <property name="Extends" value="terrStone" />

            <drop event="Harvest" tag="oreWoodHarvest" name="nugget_01" prob=".005" count="1" />
            <drop event="Harvest" tag="oreWoodHarvest" name="nugget_04" prob=".005" count="1" />
            <drop event="Harvest" tag="oreWoodHarvest" name="nugget_05" prob=".005" count="1" />

            <drop event="Harvest" tag="oreWoodHarvest" name="fossil_01" prob=".005" count="1" />
            <drop event="Harvest" tag="oreWoodHarvest" name="fossil_02" prob=".005" count="1" />
            <drop event="Harvest" tag="oreWoodHarvest" name="fossil_03" prob=".005" count="1" />
        </block>

        <block name="terrSnowCave">
            <property name="Extends" value="terrSnow" />

            <drop event="Harvest" tag="oreWoodHarvest" name="nugget_01" prob=".005" count="1" />
            <drop event="Harvest" tag="oreWoodHarvest" name="nugget_02" prob=".010" count="1" />
            <drop event="Harvest" tag="oreWoodHarvest" name="nugget_04" prob=".005" count="1" />
            <drop event="Harvest" tag="oreWoodHarvest" name="nugget_05" prob=".005" count="1" />

            <drop event="Harvest" tag="oreWoodHarvest" name="fossil_01" prob=".005" count="1" />
            <drop event="Harvest" tag="oreWoodHarvest" name="fossil_02" prob=".005" count="1" />
            <drop event="Harvest" tag="oreWoodHarvest" name="fossil_03" prob=".005" count="1" />
            <drop event="Harvest" tag="oreWoodHarvest" name="fossil_05" prob=".005" count="1" />
        </block>

        <block name="terrSandStoneCave">
            <property name="Extends" value="terrSandStone" />

            <drop event="Harvest" tag="oreWoodHarvest" name="nugget_01" prob=".005" count="1" />
            <drop event="Harvest" tag="oreWoodHarvest" name="nugget_03" prob=".010" count="1" />
            <drop event="Harvest" tag="oreWoodHarvest" name="nugget_04" prob=".005" count="1" />
            <drop event="Harvest" tag="oreWoodHarvest" name="nugget_05" prob=".005" count="1" />

            <drop event="Harvest" tag="oreWoodHarvest" name="fossil_01" prob=".005" count="1" />

<?xml version="1.0" encoding="UTF-8"?>

<modconfig>

    <!-- param to reduce the moon light intensity (vanilla value = 1) -->
    <property name="moonLightScale" value="0.1" />

    <!-- the number of game ticks after player spawned, before zombies start to spawn in caves -->
    <property name="minSpawnTicksBeforeEnemySpawn" value="500" />

    <!-- enable / disable zombie spawn in caves, use the command 'cd spawn' to toggle once in game -->
    <property name="enableCaveSpawn" value="true" />

    <!-- enable / disable zombie spawns in caves during bloodmoon only -->
    <property name="enableCaveBloodMoon" value="true" />

    <!-- the minimun euclidian distance from the player to spawn a zombie -->
    <property name="minSpawnDist" value="15" />

    <!-- same as 'minSpawnDist' but for bloodMoon zombies -->
    <property name="minSpawnDistBloodMoon" value="25" />

    <!-- allow to give more chance for spawning cave prefabs in rwg (set to 1 to reset at vanilla state) -->
    <property name="prefabScoreMultiplier" value="2" />

    <!-- integer representing the min deep (from terrain height) to spawn cave zombies -->
    <property name="zombieSpawnMarginDeep" value="5" />


</modconfig>